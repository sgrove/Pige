<%= title_tag @chunk.title %>

<div class="description">
  <p>
  Horaire de début :<br/>
  <%= I18n.localize @chunk.begin, :format => :long %>
  </p>
  <p>
  Horaire de fin :<br/>
  <%= I18n.localize @chunk.end, :format => :long %>
  </p>
  <p>
  Format :<br/>
  <%= @chunk.presenter.format %>
  </p>
  <% if @chunk.status.completed? %>
  Prêt pour être téléchargé
  <% else %>
  En cours de préparation ...
  <% end %>
</div>
<div class="details in_actions">
  <span class="length"><%= @chunk.duration.to_i / 60 %> min.</span>
  <% if @chunk.status.completed? %>
  <span class="size"><%= @chunk.size / 1.megabyte %> Mo</span>
  <% end %>
</div>

<div class="actions">
  <%= link_to_download_chunk @chunk %>
  <%= link_to 'Supprimer', [@chunk.source, @chunk], :confirm => 'Vous êtes sûr de vouloir supprimer cet extrait ?', :method => :delete, :class => "destroy" %>
</div>

<%= link_to 'Voir tous les extraits &#8250;', source_chunks_path(@chunk.source) %>

